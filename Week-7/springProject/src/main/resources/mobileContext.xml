    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:p="http://www.springframework.org/schema/p"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans  
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">  
  
	<bean id="mobile" class="com.tutorial.Spring.Mobile" autowire="byName"></bean>  
	
	<bean id="screen" class="com.tutorial.Spring.Screen"></bean>
	<bean id="camera" class="com.tutorial.Spring.Camera"></bean>
	<bean id="speaker" class="com.tutorial.Spring.Speaker"></bean>
  
</beans>  